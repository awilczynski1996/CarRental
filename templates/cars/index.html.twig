{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <h1>Cars index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Model</th>
                <th>Plate_number</th>
                <th>Date_created</th>
                <th>Date_updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.company }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.plateNumber }}</td>
                <td>{{ car.dateCreated ? car.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ car.dateUpdated ? car.dateUpdated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cars_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('cars_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cars_new') }}">Create new</a>
{% endblock %}
